{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "overrides": [
        {
            "files": [
                "test/*.js"
            ],
            "plugins": [
                "mocha"
            ],
            "extends": [
                "plugin:mocha/recommended"
            ],
            "rules": {
                "func-names": "off",
                "prefer-arrow-callback": "off",
                "mocha/prefer-arrow-callback": "error",
                "mocha/no-exclusive-tests": "error",
                "mocha/no-pending-tests": "error"
            }
        }
    ]
}
